<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.mia20.mia20app.Fragment.FehlzeitenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/tab3"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In welchem Fach willst du fehlen ?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/stunden2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Gib deine Fehlzeiten ein"
        android:textSize="30sp"

        android:id="@+id/textInputEditText"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/stunden2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechnen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="181dp" />

</RelativeLayout>
